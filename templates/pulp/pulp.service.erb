[Unit]
Description=<%= @description %>
After=docker.service <%= @after_units.join(' ') %>
Require=docker.service <%= @required_units.join(' ') %>

[Service]
ExecStart=/usr/local/bin/systemd-docker start --name %n --rm <%= @container %>
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=All
TimeoutStartSec=120
TimeoutStopSec=15


[Install]
WantedBy=multi-user.target
